{
  "manifest_version": 2,
  "name": "TwitchThemer",
  "version": "1.0.0",
  "description": "Choose what color you want your twitch to be!",
  "author": "SpiralDev",
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "theme.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.css"
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitchthemer@spiraldev"
    }
  }
}